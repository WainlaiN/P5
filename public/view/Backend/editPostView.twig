{% extends 'template.twig' %}
{% block title %}Editer un article{% endblock %}
{% block content %}


    <p><a href="/admin">Retour Ã  la liste des billets</a></p>
    <form action="" method="post">

        <div class="form-group">

            <input type="hidden" id="authorid" name="authorid" value="{{ listpost.authorId }}" class="form-control"/>
            <input type="hidden" value="{{ session._sf2_attributes.token }}" id="formtoken" name="formtoken"/>
            <label for="author">Auteur</label><br/>
            <input type="text" id="author" name="author" value="{{ listpost.username }}" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label for="title">Titre</label><br/>
            <input type="text" id="title" name="title" value="{{ listpost.title }}" class="form-control" required/>
        </div>
        <div class="form-group">
            <label for="chapo">Chapo</label><br/>
            <input type="text" id="chapo" name="chapo" value="{{ listpost.chapo }}" class="form-control" required/>
        </div>
        <div class="form-group">
            <label for="description">Description</label><br/>
            <textarea id="description" name="description" rows="10"
                      class="form-control" required>{{ listpost.description }}</textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Modifier">
        </div>
    </form>

{% endblock %}

