{% extends 'template.twig' %}
{% block title %}Mes Articles{% endblock %}
{% block content %}

     <section id="blog">
        <div class="row">
            <div class="col-lg-12 col-lg-offset-3 text-center">
                <h2>
                    <span class="ion-minus"></span>- Derniers billets du blog -<span class="ion-minus"></span>
                </h2>
                <p>Vous trouverez ici la liste de mes derniers </p><br>
            </div>
        </div>

        <div class="container py-3">
            <div class="row">
                {% for listpost in listposts %}
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <div class="card text-center">
                            <div class="card-block">
                                <h5 class="card-header">{{ listpost.title }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted  p-3">{{ listpost.chapo }}</h6>
                                <p class="card-text text-truncate  p-2">{{ listpost.description }}</p>
                                <p class="card-text"><small class="text-muted">Mis Ã  jour le
                                        {% if listpost.dateUpdate is not null %}
                                            <td>{{ listpost.dateUpdate }} par <b>{{ listpost.username }}</b></td>
                                        {% else %}
                                            <td>{{ listpost.dateCreation }}  par <b>{{ listpost.username }}</b></td>
                                        {% endif %}</small></p>
                                <a class="btn btn-primary" href="post/{{ listpost.postId }}">Plus...</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}