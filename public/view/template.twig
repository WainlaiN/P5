    <![endif]-->

</head>
<body>
<!-- Navigation -->
<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/public/img/php.png" width="30px" height="30px" alt="Logo">
            <img src="/public/img/symfony.png" width="30px" height="30px" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Projet5/posts">Blog</a>
                </li>

                {% if session._sf2_attributes.auth.userstatus == 1 %}
                    <li class="nav-item">
                        <a class="nav-link" href="/CV">CV</a>
                    </li>
                    <li>
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                {% endif %}
                {% if session._sf2_attributes.auth is defined %}
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fa fa-power-off"></i>
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a class="nav-link" href="/register">S'inscrire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">
                            <i class="fa fa-power-off"></i></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% if session._sf2_attributes.warning is defined %}
    <div class="alert alert-danger" role="alert">
        <h6>{{ session._sf2_attributes.warning }}</h6>
    </div>
{% endif %}
{% if session._sf2_attributes.success is defined %}
    <div class="alert alert-success" role="alert">
        <h6>{{ session._sf2_attributes.success }}</h6>
    </div>
{% endif %}
<div class="container">

    {% block content %} {% endblock %}

</div>

<!-- Footer -->

<footer class="text-center">
    <div class="footer-above">
        <div class="container">
            <div class="row">
                <div class="footer-col col-md-12">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="https://www.linkedin.com/in/nicolas-dupriez-619300163/" class="social">
                                <i class="fa fa-linkedin" style="font-size:36px"></i></a></li>
                        <li class="list-inline-item">
                            <a href="https://github.com/WainlaiN/Projet-5" class="social"><i class="fa fa-github"
                                                                                             style="font-size:36px"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row col-md-12">
                <div class="footer-col col-md-12">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="/CGV" data-target="#mentions" style="color:white"><h5>Mentions l√©gales</h5></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="/admin" data-target="#admin" style="color:white"><h5>Administration</h5></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-below">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    Copyright &copy; Your Website 2020
                </div>
            </div>
